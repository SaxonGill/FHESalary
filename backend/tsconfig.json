{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "types": [
      "node",
      "hardhat"
    ]
  },
  "include": [
    "./hardhat.config.ts",
    "./deploy/**/*.ts",
    "./scripts/**/*.ts",
    "./test/**/*.ts",
    "./typechain/**/*.ts"
  ]
}


